<div class="home-wrapper">
  <div class="home-container" style="background-image: url('<%= image_url "garden-home.jpg" %>'); background-size: cover; height: 100vh">
    <div class="home-texte text-center">
      <h1>Gardeny</h1>
      <p>Find your garden to party</p>

      <form action="/gardens" method="get" class="form-inline text-center padded">
        <div class="form-group">
          <label class="sr-only" for="inlineFormInput">City</label>
          <input class="form-control" type="text" id="inlineFormInput" placeholder="Paris" name="city">
        </div>

        <div class="form-group">
          <label for="checkin" class="sr-only">Checkin</label>
          <input class="form-control" type="date" id="checkin" name="date_check_in"value="<%= Date.today %>">
        </div>
        <button type="submit" class="btn btn-default">Go</button>
      </form>

    </div>
  </div>
</div>

